@page "{restaurantId:int}"
@model OdeToFood.Web.Pages.Restaurants.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<div class="alert alert-success">@Model.Message</div>

<h1>@Model.Restaurant.Name</h1>
<div>Id: @Model.Restaurant.Id</div>
<div>Location: @Model.Restaurant.Location</div>
<div>Cuisine: @Model.Restaurant.Cuisine</div>
<a asp-page="./List" class="btn btn-secondary">Back to List</a>

